<Application
    x:Class="Webim_Client.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Webim_Client">

    <Application.Resources>
        
        <x:Double x:Key="BubbleMessageFontSize">18</x:Double>
        <x:Double x:Key="BubbleDateFontSize">10</x:Double>
        <x:Double x:Key="BubbleSystemMessageFontSize">14</x:Double>

        <SolidColorBrush x:Key="BubbleSystemFont" Color="OldLace"/>
        <SolidColorBrush x:Key="BubbleVisitorBackgroundFont" Color="DarkCyan"/>
        <SolidColorBrush x:Key="BubbleOperatorBackgroundFont" Color="DarkGoldenrod"/>
        
    </Application.Resources>

</Application>
